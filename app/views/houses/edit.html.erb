<%= image_tag "capital-logo.svg", alt: "logo", class: 'logo-top' %>

<%= simple_form_for(@house) do |f| %>
<div class="card-container house-input">
  <h6>Edit House:</h6>

    <%= f.input :name %>
    <%= f.input :email %>
    <h6>House Members:</h6>
    <div class="d-flex justify-content-between">
      <% @house.users.each do |user| %>
        <div class="round-members">
          <p style="color: #FFF3EC"><%= user.first_name%></p>
        </div>
      <% end %>
    </div>

</div>
  <div class="card-bottom">
    <%= link_to "Go back", settings_house_path(@house), class: "btn btn-info btn-sm"  %>
    <div class="form-actions next-button-container">
    <%= f.submit "Save", class: "btn btn-primary btn-sm" %>
    </div>
  </div>
<% end %>
