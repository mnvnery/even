<h3 class="house-name">Edit Bill</h3>

<div class="bill-container">
    <%= simple_form_for [@house, @bill] do |f| %>
        <%= f.input :category, collection: ['rent', 'gas', 'electricity', 'internet', 'water'] %>

        <div class="d-flex">
          <%= f.input :name %>
          <%= f.input :due_date, html5:true %>
        </div>

          <%= f.label :amount %>
        <div class="d-flex">
          <%= f.input_field :amount, class: "form-control" %>
          <%= f.submit "Split Even", class: "split-even-btn" %>
        </div>

        <div class="member-shares-container">
          <% @house.memberships.each do | membership | %>
            <div class="member-share">
              <p class="member-title"><%= membership.user.name.split(' ')[0] %></p>
              <input class="form-control numeric integer optional member-value" type="number" name="share[<%=membership.user.id%>]" value="<%= @bill.get_share_amount_by_user(membership.user) %>">
            </div>
          <% end %>
        </div>


        <div class="add-button-container">
          <%= f.submit "Submit", class: "btn btn-primary add-button" %>
        </div>

    <% end%>
      <div class="mt-3">
        <%= link_to "Delete Bill",
        bill_path(@bill),
        method: :delete,
        data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-block add-button" %>
      </div>
  </div>



<div class="mb-5 pb-5"></div>
