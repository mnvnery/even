<%= link_to "Log out", destroy_user_session_path, method: :delete %>
<h3 class="text-center"> <%= @house.name  %> </h3>



<div class="graph-container">
  <% @house.memberships.each do |membership| %>              <!-- Create Symbols -->
    <div class="graph-element">
        <% @shares_all.each do |share| %>
          <% if %>
            <% share.bill.house == @house %>
            <% if membership.user == share.user %>
                  <% if @icon_names.include?(share.bill.category)%>
                    <div> <%= image_tag @symbols_map[share.bill.category.to_sym], alt: "blue-logo", style: "width: 30px"%></div>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
        <!-- Create Name Below the Symbols -->
        <div class="graph-element-name"><%= membership.user.name.split(' ')[0] %></div>
    </div>
  <% end %>
</div>

<%= link_to "Even up ->", house_shares_path%>
<div class='notification-card'>
  <% @shares.each do |share| %>
    <% if share.bill.house == @house %>
      <% due_date = share.bill.due_date.strftime("%b %d") %>
      <div class="border p-2 mb-2">
        <div class="row">
          <ul class="list-unstyled mb-0 col-6">
            <div>
              <p class="text-muted mb-0"> <%= due_date %> </p>
              <%= link_to share.bill.name,  edit_house_bill_path(share.bill.house_id, share.bill_id) %>
            </div>
          </ul>
          <ul class="list-unstyled mb-0 col-2">
            <% if @icon_names.include?(share.bill.category)%>
              <%= image_tag @icons_map[share.bill.category.to_sym], alt: "blue-logo", style: "width: 50px" %>
            <% end %>
          </ul>
          <ul class="list-unstyled mb-0 col-4 text-right pr-5">
            $<%= share.amount %>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class="my-5 py-5"></div>

